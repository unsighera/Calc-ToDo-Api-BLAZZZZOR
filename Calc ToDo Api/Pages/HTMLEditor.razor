<h3>HTMLEditor</h3>
@page "/htmle"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vertical Split Page</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }
        .container {
            display: flex;
            height: 100%;
        }
        .left-half, .right-half {
            box-sizing: border-box;
            padding: 20px;
            min-height: 800px;
            max-width: 100%;
            flex: 1;
        }
        .left-half {
            background-color: #f0f0f0;
        }
        .right-half {
            background-color: #fff;
        }
        textarea {
            width: 100%;
            height: 100%;
            border: none;
            resize: none;
        }
        .preview-iframe {
            width: 100%;
            height: 100%;
        }

        p {
            margin: 0;
            line-height: 1.5;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-half">
            <textarea @bind="HTMLCode" placeholder="Введите текст здесь..."></textarea>
        </div>
        <div class="right-half">
            <iframe class="preview-iframe" srcdoc="@HTMLCode"></iframe>
        </div>
    </div>
</body>
</html>

@code {
    private string HTMLCode = "";
}